{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended",
        "plugin:react-hooks/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:import/recommended"
    ],
    "plugins": ["react", "prettier", "import"],
    "env": {
        "browser": true,
        "jasmine": true,
        "jest": true,
        "node": true
    },
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "singleQuote": true,
                "tabWidth": 2
            }
        ],
        "react/prop-types": "off"
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "detect"
        }
    }
}
